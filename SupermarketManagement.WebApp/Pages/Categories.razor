@page "/Categories"

<h3>Manage Categories</h3>

@if (categories is null && ErrorMessage is null)
{
    <p>Loading categories...</p>
}
else if (ErrorMessage is not null)
{
    <h5 class="alert alert-danger">@ErrorMessage</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories!)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a href="/EditCategory/@category.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<button class="btn btn-primary" @onclick="HandleAddingCategory_Click">Add Category</button>