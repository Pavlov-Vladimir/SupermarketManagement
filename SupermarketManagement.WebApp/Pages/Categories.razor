@page "/Categories"

<h3>Manage Categories</h3>

@if (categories is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a href="">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5>There are no categories yet</h5>
}
<button class="btn btn-primary" @onclick="AddCategory_Click">Add Category</button>